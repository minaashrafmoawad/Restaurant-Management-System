@model RestaurantManagementSystem.Domain.Models.Table

@{
    ViewData["Title"] = "Edit Table";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0">
                    <i class="fas fa-edit text-warning me-2"></i>
                    Edit Table #@Model.Number
                </h2>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <input asp-for="CreatedById" type="hidden" />
                        <input asp-for="IsDeleted" type="hidden" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Number" class="form-label">
                                        <i class="fas fa-hashtag me-1"></i>Table Number
                                    </label>
                                    <input asp-for="Number" class="form-control" type="number" min="1"
                                           placeholder="Enter table number" required />
                                    <span asp-validation-for="Number" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Each table must have a unique number
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label">
                                        <i class="fas fa-users me-1"></i>Seating Capacity
                                    </label>
                                    <input asp-for="Capacity" class="form-control" type="number" min="1" max="20"
                                           placeholder="Enter seating capacity" required />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Number of people this table can accommodate
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                                <label asp-for="IsAvailable" class="form-check-label">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Table is available for reservations
                                </label>
                            </div>
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted">Created Date</label>
                                <p class="form-control-plaintext">@Model.CreatedDate.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                            @if (Model.UpdatedDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Last Updated</label>
                                    <p class="form-control-plaintext">@Model.UpdatedDate?.ToString("MMM dd, yyyy HH:mm")</p>
                                </div>
                            }
                        </div>

                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                    Table Information
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Table ID:</small>
                                        <br><code class="small">@Model.Id</code>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Current Status:</small>
                                        <br>
                                        @if (Model.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Occupied</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Update Table
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Update the availability label based on checkbox state
            function updateAvailabilityLabel() {
                var isChecked = $('#IsAvailable').is(':checked');
                var label = $('label[for="IsAvailable"]');

                if (isChecked) {
                    label.html('<i class="fas fa-check-circle me-1 text-success"></i>Table is available for reservations');
                } else {
                    label.html('<i class="fas fa-times-circle me-1 text-danger"></i>Table is not available for reservations');
                }
            }

            // Initialize label
            updateAvailabilityLabel();

            // Update label when checkbox changes
            $('#IsAvailable').change(function() {
                updateAvailabilityLabel();
            });

            // Form validation
            $('form').submit(function(e) {
                var tableNumber = $('#Number').val();
                var capacity = $('#Capacity').val();

                if (!tableNumber || tableNumber <= 0) {
                    e.preventDefault();
                    alert('Please enter a valid table number.');
                    $('#Number').focus();
                    return false;
                }

                if (!capacity || capacity <= 0) {
                    e.preventDefault();
                    alert('Please enter a valid seating capacity.');
                    $('#Capacity').focus();
                    return false;
                }
            });
        });
    </script>
}